<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/static/images/favicon.jpg" sizes="32x32" type="/image/svg">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <script src="/static/js/bootstrap.bundle.min.js"></script>
    <script src="/static/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="/static/js/global.js"></script>
    <script src="/static/js/axios.min.js"></script>
    <link rel="stylesheet" href="/static/css/dataTables.min.css">
    <script src="/static/jquery/dataTables.min.js"></script> 
    <title>Ascent HR</title>
</head>

<body>
    <header class="px-3 mb-1 bg-white text-dark header1 header-div sticky-top">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <div class="">
                    <img src="/static/images/ascent.png" alt="logo" class="logo" height="80px" width="150px">
                </div>
                <div class="d-flex justify-content-between pe-4">
                    <nav class="navbar navbar-expand ">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img class="img-profile rounded-circle me-2" src="/static/images/profile.jpg"
                                        alt="prifile" height="40" width="40">
                                    <span class="pe-2 mt-2 fs-6 text-body text-capitalize">Ascent</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                    aria-labelledby="userDropdown">
                                    <a class="dropdown-item" href="/admin/logout">
                                        Logout
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid m-0 col-12">
        <div class="row">
            <div class="col-md-3 col-lg-2 pt-2 ps-0 position-relative">
                <div class="dashboard-menu position-relative bg-white position-sticky">
                    <div class="d-flex flex-column">                                                
                        <a href="/admin/users-list" class=" custom-color text-decoration-none">
                            <div class="p-2 <%=typeof page != 'undefined' && page=='users-list'?'active':''%>">                             
                                <i class="bi bi-envelope pe-2 fs-5"></i>
                                <span class="fs-6 menu-item">Schedule Email List</span>
                            </div>
                        </a>  
                        <a href="/admin/send-email" class="custom-color text-decoration-none mt-2">
                            <div class="p-2 <%=typeof page != 'undefined' && page=='send-email'?'active':''%>">                              
                                <i class="bi bi-envelope-check pe-2 fs-5"></i>
                                <span class="fs-6 menu-item">Send Email</span>
                            </div>
                        </a>   
                        <a href="/admin/pending-email" class="custom-color text-decoration-none mt-2">
                            <div class="p-2 <%=typeof page != 'undefined' && page=='pending-email'?'active':''%>">
                                <i class="bi bi-envelope pe-2 fs-5"></i>
                                <span class="fs-6 menu-item">Pending Email</span>
                            </div>
                        </a>            
                    </div>                   
                </div>
            </div>
            <div class="col-md-9 col-lg-10 main-content pt-2">
                <%- body %>
            </div>
        </div>
    </div>
    <div class="feedback-section" id="wTdOl5MnWz"><span></span></div>
    <div id="alter-container" class="alert alert-danger posission-fixed text-center fixed-bottom w-100 m-0 d-none"
        role="alert">
        <div id="alert-container-txt" class="conteainer">
            A simple danger alert with <a href="#" class="alert-link">an example link</a>. Give it a click if you
            like.
        </div>
    </div>
</body>

</html>